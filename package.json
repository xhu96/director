{
  "name": "director-enhanced-redis",
  "private": true,
  "description": "Enhanced fork of Director with Redis caching for horizontal scaling. Upstream: https://github.com/director-run/director",
  "repository": {
    "type": "git",
    "url": "https://github.com/director-run/director"
  },
  "author": "Barnaby Malet <barnaby@director.run>",
  "license": "AGPL-3.0",
  "homepage": "https://director.run",
  "scripts": {
    "dev": "turbo run dev",
    "dev:reset": "bun run clean && bun install",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "spellcheck": "turbo run spellcheck",
    "format": "turbo run format",
    "release": "turbo run release --filter=@director.run/cli",
    "format:fix-imports": "biome check --formatter-enabled=false --linter-enabled=false --organize-imports-enabled=true --write .",
    "test": "turbo run test --concurrency=1 -- --watch=false",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean",
    "cli": "bun run ./apps/cli/bin/cli.ts",
    "studio": "turbo run dev --filter=@director.run/studio",
    "storybook": "cd apps/studio && bun run storybook:dev",
    "cli:dev": "NODE_ENV=development bun ./apps/cli/bin/cli.ts",
    "registry": "NODE_ENV=development bun run ./apps/registry/bin/api.ts",
    "registry:dev": "NODE_ENV=development bun  --watch ./apps/registry/bin/api.ts",
    "inspector": "npx @modelcontextprotocol/inspector",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "version-packages-formatted": "changeset version && bun run format",
    "release-packages": "bun run build && changeset publish",
    "serve": "NODE_ENV=development bun run ./apps/gateway/bin/server.ts",
    "serve:dev": "NODE_ENV=development bun --watch ./apps/gateway/bin/server.ts",
    "reset": "bun run ./apps/gateway/bin/reset.ts",
    "check": "bun run lint && bun run typecheck && bun run test && bun run build",
    "db:push": "cd apps/gateway && NODE_ENV=development bun run db:push",
    "db:seed": "NODE_ENV=development bun run apps/gateway/bin/seed.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@changesets/get-github-info": "^0.6.0",
    "@director.run/cli": "workspace:*",
    "@director.run/sdk": "workspace:*",
    "@types/bun": "~1.3.4",
    "tsup": "^8.5.1",
    "turbo": "^2.6.3",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4",
    "zx": "^8.8.5"
  },
  "packageManager": "bun@1.3.2",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "engines": {
    "node": ">=22.0.0",
    "bun": "1.3.2"
  },
  "overrides": {
    "glob": "^10.5.0",
    "vite": "^7.2.0",
    "esbuild": "^0.25.0",
    "@modelcontextprotocol/sdk": "^1.24.0",
    "mdast-util-to-hast": "^13.2.1",
    "body-parser": "^2.2.1",
    "js-yaml": "^3.14.2"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.51.1"
  }
}
