{
  "name": "@director.run/gateway",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "lint": "biome check .",
    "format": "biome format --write .",
    "clean": "rm -rf .turbo dist/*",
    "test": "bun run vitest  --fileParallelism=false",
    "typecheck": "tsc --noEmit",
    "db:push": "drizzle-kit push --force",
    "serve:dev": "bun run --watch bin/start.ts",
    "serve": "NODE_ENV=development bun run bin/server.ts",
    "db:seed": "bun run bin/seed.ts",
    "docker:dev": "docker compose up --build",
    "build": "bun run clean && bun build --production --target=node --sourcemap=linked bin/*.ts --outdir dist && cp -r ../../apps/studio/dist dist/studio"
  },
  "exports": {
    "./db": "./src/db/index.ts",
    "./db/schema": "./src/db/schema.ts",
    "./*": "./src/*.ts"
  },
  "dependencies": {
    "@director.run/client-configurator": "workspace:*",
    "@director.run/mcp": "workspace:*",
    "@director.run/utilities": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.24.3",
    "@t3-oss/env-core": "^0.12.0",
    "@trpc/client": "^11.0.2",
    "@trpc/server": "^11.0.2",
    "@types/lodash": "^4.17.16",
    "better-auth": "^1.4.6",
    "bytes": "^3.1.2",
    "content-type": "^1.0.5",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.43.1",
    "express": "^4.21.2",
    "http-errors": "^2.0.0",
    "iconv-lite": "^0.6.3",
    "lodash": "^4.17.21",
    "pg": "^8.15.6",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "raw-body": "^3.0.0",
    "slugify": "^1.6.6",
    "superjson": "^2.2.1",
    "unpipe": "^1.0.0",
    "yaml": "^2.8.1",
    "zod": "^3.25.76",
    "ioredis": "^5.4.1",
    "bullmq": "^5.34.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.7.0",
    "@types/bun": "~1.3.0",
    "@types/content-type": "^1.1.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/pg": "^8.11.14",
    "@types/raw-body": "^2.3.0",
    "@types/semver": "^7.7.0",
    "drizzle-kit": "^0.31.1",
    "type-fest": "^4.40.0",
    "vitest": "^3.1.1"
  }
}
