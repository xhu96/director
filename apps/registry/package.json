{
  "name": "@director.run/registry",
  "private": true,
  "type": "module",
  "version": "0.0.1",
  "author": "Barnaby Malet <barnaby@director.run>",
  "license": "AGPL-3.0",
  "scripts": {
    "lint": "biome check .",
    "format": "biome format --write .",
    "clean": "rm -rf .turbo dist/*",
    "typecheck": "tsc --noEmit",
    "test": "bun run vitest",
    "build": "bun run clean && bun build --production --target=node --sourcemap=linked bin/*.ts --outdir dist",
    "db:push": "drizzle-kit push",
    "dev": "bun --watch bin/api.ts",
    "docker:dev": "docker compose up --build"
  },
  "exports": {
    "./*": "./src/*.ts"
  },
  "devDependencies": {
    "@director.run/gateway": "workspace:*",
    "@director.run/mcp": "workspace:*",
    "@director.run/utilities": "workspace:*",
    "@faker-js/faker": "^9.7.0",
    "@types/bun": "~1.3.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/lodash": "^4.17.16",
    "@types/pg": "^8.11.14",
    "drizzle-kit": "^0.31.1",
    "typescript": "^5.8.3",
    "vitest": "^3.1.1"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.5.2",
    "@modelcontextprotocol/sdk": "^1.24.3",
    "@trpc/client": "^11.0.2",
    "@trpc/server": "^11.0.2",
    "commander": "^13.1.0",
    "cors": "^2.8.5",
    "drizzle-orm": "^0.43.1",
    "express": "^4.21.2",
    "git-url-parse": "^16.1.0",
    "lodash": "^4.17.21",
    "pg": "^8.15.6",
    "slugify": "^1.6.6",
    "superjson": "^2.2.1",
    "zod": "^3.25.76"
  }
}
